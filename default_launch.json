{
  "template": "small",
  "world": {
    "chunkEdgeLengthMeters": 16,
    "snapshots": {
      "snapshotWritePeriodSeconds": 0
    },
    "dimensions": {
      "xMeters": 1500,
      "zMeters": 1500
    }
  },
  "load_balancing": {
    "layer_configurations": [
      {
        "layer": "chunk_worker",
        "hex_grid": {
          "num_workers": 1
        },
        "options": {
          "manual_worker_connection_only": true
        }
      }
    ]
  },
  "workers": [
    {
      "worker_type": "HorizonJavaWorker",
      "permissions": [
        {
          "all": {}
        }
      ]
    },
    {
      "worker_type": "ChunkWorker",
      "permissions": [
        {
          "all": {}
        }
      ]
    },
    {
      "worker_type": "HorizonClientWorker",
      "permissions": [
        {
          "all": {}
        }
      ]
    }
  ]
}
